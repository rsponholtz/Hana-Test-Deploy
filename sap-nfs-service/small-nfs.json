{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName1": {
            "type": "string",
            "metadata": {
                "description": "VM Name"
            }
        },
        "vmName2": {
            "type": "string",
            "metadata": {
                "description": "VM Name 2"
            }
        },
        "SubnetRef": {
            "type": "string",
            "metadata": {
                "description": "The Hana subnet reference ID"
            }
        },
        "OperatingSystem": {
            "type": "string",
            "metadata": {
                "description": "Operating system for nfs Machine"
            }
        },
        "vmUserName": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine"
            },
            "defaultValue": "testuser"
        },
        "vmPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine"
            }
        },
        "vmPublicKey": {
            "type": "securestring",
            "metadata": {
                "description": "PublicKeyName"
            }
        },
        "hanaSid": {
            "type": "string",
            "metadata": {
                "description": "SAP HANA System ID"
            },
            "defaultValue": "H10"
        },
        "hanaNumber": {
            "type": "string",
            "metadata": {
                "description": "SAP HANA Instance Number"
            },
            "defaultValue": "00"
        },
        "vmSize": {
            "type": "string",
            "metadata": {
                "description": "Size of VM to deploy"
            }
        },
        "StaticIP1": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the HANA VM when Static IP Allocation Method has been selected"
            },
            "defaultValue": "10.0.5.4"
        },
        "StaticIP2": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the other HANA VM when Static IP Allocation Method has been selected"
            },
            "defaultValue": "10.0.5.5"
        },
        "HSRINST": {
            "type": "string",
            "metadata": {
                "description": "Should we configure HSR for the VM"
            },
            "defaultValue": "no",
            "allowedValues": [
                "yes",
                "no"
            ]
        },
        "ISPRIMARY": {
            "type": "string",
            "metadata": {
                "description": "Is this the primary HANA instance"
            },
            "defaultValue": "yes",
            "allowedValues": [
                "yes",
                "no"
            ]
        },
        "repoUri": {
            "type": "string",
            "metadata": {
                "description": "URI to scripts repo"
            },
            "defaultValue": "no"
        },
        "ISCSIIP": {
            "type": "string",
            "metadata": {
                "description": "IP Address for machine providing ISCSI storage"
            },
            "defaultValue": "10.0.6.4"
        },
        "loadBalancerName": {
            "type": "string",
            "metadata": {
                "description": "load balancer name"
            },
            "defaultValue": "hanalb"
        },
        "LBIP": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the internal load balancer"
            },
            "defaultValue": "10.0.5.10"
        },
        "avSetObj": {
            "type": "object",
            "metadata": {
                "description": "Availability set."
            }
        },
        "DataDiskSize": {
            "type": "int",
            "metadata": {
                "description": "size of the data disk"
            },
            "defaultValue": "1023"
        }
    },
    "variables": {
        "api-version": "2017-06-01",
        "api-version-vm": "2017-03-30",
        "nicName": "[concat(parameters('vmName1'),'-static')]",
        "subnetRef": "[parameters('SubnetRef')]",
        "images": {
            "Windows Server 2016 Datacenter": {
                "sku": "2016-Datacenter",
                "offer": "WindowsServer",
                "publisher": "MicrosoftWindowsServer",
                "version": "latest",
                "OSType": "Windows"
            },
            "Windows Server 2019 Datacenter": {
                "sku": "2019-Datacenter",
                "offer": "WindowsServer",
                "publisher": "MicrosoftWindowsServer",
                "version": "latest",
                "OSType": "Windows"
            },   
            "SLES 15 SP1": {
                "sku": "gen1",
                "offer": "sles-15-sp1",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },      
            "SLES 15 SP3": {
                "sku": "gen1",
                "offer": "sles-15-sp3",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },      
            "SLES 12 SP3": {
                "sku": "12-SP3",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES 12 SP3BYOS": {
                "sku": "12-SP3",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "OSType": "Linux",
                "version": "latest"
            },
            "SLES 12 SP4": {
                "sku": "12-SP4",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 12 SP4": {
                "sku": "12-SP4",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 12 SP4 BYOS": {
                "sku": "12-SP4",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 12 SP5": {
                "sku": "12-SP5",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 12 SP5 BYOS": {
                "sku": "12-SP5",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 15 SP1": {
                "sku": "15",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 15 SP1 BYOS": {
                "sku": "15",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 15 SP3": {
                "sku": "15-SP3",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 15 SP3 BYOS": {
                "sku": "15-SP3",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES 12 SP4BYOS": {
                "sku": "12-SP4",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "OSType": "Linux",
                "version": "latest"
            },            
            "SLES 12 SP2": {
                "sku": "12-SP2",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES 12 SP2 BYOS": {
                "sku": "12-SP2",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "OSType": "Linux",
                "version": "latest"
            }
        },
        "OperatingSystemSpec": {
            "imagePublisher": "[variables('images')[parameters('OperatingSystem')].publisher]",
            "imageOffer": "[variables('images')[parameters('OperatingSystem')].offer]",
            "sku": "[variables('images')[parameters('OperatingSystem')].sku]",
            "version": "[variables('images')[parameters('OperatingSystem')].version"
        },
        "internalAVSetObj": "[parameters('avSetObj')]"
    },
    "resources": [
        {
            "apiVersion": "[variables('api-version')]",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('vmName1'),'-static')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "enableAcceleratedNetworking": true,                
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('StaticIP1')]",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName')), '/backendAddressPools/BackendPool1')]"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('vmName1'),'-data')]",
            "apiVersion": "[variables('api-version-vm')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('DataDiskSize')]"
            }
        },
        {
            "apiVersion": "[variables('api-version-vm')]",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName1')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName1'),'-data'))]"
            ],
            "properties": {
                "availabilitySet": "[variables('internalAVSetObj')]",
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName1')]",
                    "adminUsername": "[parameters('vmUserName')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('adminPublicKey')]"
                                }
                            ]
                        }
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('OperatingSystemSpec').imagePublisher]",
                        "offer": "[variables('OperatingSystemSpec').imageOffer]",
                        "sku": "[variables('OperatingSystemSpec').sku]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                            "createOption": "attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmName1'),'-data'))]"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                        }
                    ]
                }
            },
            "resources": [
            ]
        }
    ],
    "outputs": {}
}
