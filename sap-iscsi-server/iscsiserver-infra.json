{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmUserName": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine"
            },
            "defaultValue": "testuser"
        },
        "ExistingNetworkResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Resource Group for the VNET where the VM will be placed"
            }
        },
        "vnetName": {
            "defaultValue": "vnet",
            "type": "string"
        },
        "subnetName": {
            "defaultValue": "mgtsubnet",
            "type": "string"
        },
        "OperatingSystem": {
            "type": "string",
            "allowedValues": [
                "Windows Server 2016 Datacenter",
                "SLES for SAP 12 SP5",
                "SLES for SAP 15 SP1",
                "SLES for SAP 12 SP3",
                "SLES for SAP 12 SP4",
                "SLES for SAP 12 SP2",
                "RHEL 7.2 for SAP HANA",
                "SLES 12 SP5",
                "SLES 15 SP1",
                "SLES 12 SP3",
                "SLES 12 SP4",
                "SLES 12 SP2",
                "RHEL 7.2 for SAP HANA"                
            ],
            "defaultValue": "SLES 12 SP3",
            "metadata": {
                "description": "The type of the operating system you want to deploy."
            }
        },
        "vmPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine"
            }
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "ISCSI VM name"
            },
            "defaultValue": "iscsiserver"
        },
        "StaticIP": {
            "type": "string",
            "defaultValue": "10.0.2.6",
            "metadata": {
                "description": "static ip address for the virtual machine"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
            },
            "defaultValue": "https://raw.githubusercontent.com/AzureCAT-GSI/Hana-Test-Deploy/master/"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "vnetID": "[resourceId(parameters('ExistingNetworkResourceGroup'),'Microsoft.Network/virtualNetworks',parameters('vnetName'))]",
        "subnetRef": "[concat(variables('vnetID'), '/subnets/',parameters('subnetName'))]",
        "vmName": "[parameters('vmName')]",
        "vNicName": "[concat(parameters('vmName'),'-nic')]",
        "vhdStorageAccountName": "[uniqueString(resourceGroup().id, 'storage')]",
        "images": {
            "Windows Server 2016 Datacenter": {
                "sku": "2016-Datacenter",
                "offer": "WindowsServer",
                "publisher": "MicrosoftWindowsServer",
                "version": "latest",
                "OSType": "Windows"
            },
            "Windows Server 2019 Datacenter": {
                "sku": "2019-Datacenter",
                "offer": "WindowsServer",
                "publisher": "MicrosoftWindowsServer",
                "version": "latest",
                "OSType": "Windows"
            },    
            "SLES 15 SP1": {
                "sku": "15-SP1",
                "offer": "SLES",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES 12 SP5": {
                "sku": "12-SP5",
                "offer": "SLES",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES 12 SP3": {
                "sku": "12-SP3",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES 12 SP3BYOS": {
                "sku": "12-SP3",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "OSType": "Linux",
                "version": "latest"
            },
            "SLES 12 SP4": {
                "sku": "12-SP4",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 12 SP4": {
                "sku": "12-SP4",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 12 SP4 BYOS": {
                "sku": "12-SP4",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 12 SP5": {
                "sku": "12-SP5",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 12 SP5 BYOS": {
                "sku": "12-SP5",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 15 SP1": {
                "sku": "15-SP1",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES for SAP 15 SP1 BYOS": {
                "sku": "12-SP4",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },

            "SLES 12 SP4BYOS": {
                "sku": "12-SP4",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "OSType": "Linux",
                "version": "latest"
            },            
            "SLES 12 SP2": {
                "sku": "12-SP2",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux"
            },
            "SLES 12 SP2 BYOS": {
                "sku": "12-SP2",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "OSType": "Linux",
                "version": "latest"
            }
        },
        "OperatingSystemSpec": {
            "imagePublisher": "[variables('images')[parameters('OperatingSystem')].publisher]",
            "imageOffer": "[variables('images')[parameters('OperatingSystem')].offer]",
            "sku": "[variables('images')[parameters('OperatingSystem')].sku]",
            "version": "latest"
        },
        "csExtension": {
            "Windows": {
                "script": "[concat(parameters('_artifactsLocation'), '/scripts/noop.ps1', parameters('_artifactsLocationSasToken'))]",
                "scriptCall": "powershell.exe -ExecutionPolicy bypass -File noop.ps1"
            },
            "Linux": {
                "script": "[concat(parameters('_artifactsLocation'), '/sap-iscsi-server/iscsiserver.sh', parameters('_artifactsLocationSasToken'))]",
                "scriptCall": "sh iscsiserver.sh"
            }
        },
        "scriptFolder": "."
    },
    "resources": [
        {
            "apiVersion": "2016-09-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('vNicName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('StaticIP')]",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2017-12-01",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('vNicName')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D1_v2"
                },
                "osProfile": {
                    "computerName": "[variables('vmName')]",
                    "adminUsername": "[parameters('vmUserName')]",
                    "adminPassword": "[parameters('vmPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('OperatingSystemSpec').imagePublisher]",
                        "offer": "[variables('OperatingSystemSpec').imageOffer]",
                        "sku": "[variables('OperatingSystemSpec').sku]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('vNicName'))]"
                        }
                    ]
                }
            },
            "resources": []
        }
    ],
    "outputs": {}
}

